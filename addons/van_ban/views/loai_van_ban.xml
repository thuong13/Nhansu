<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Form View -->
        <record id="view_loai_van_ban_form" model="ir.ui.view">
            <field name="name">loai_van_ban.form</field>
            <field name="model">loai_van_ban</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <h2>Quản lý loại văn bản</h2>
                        <group col="4" string="Thông tin chung">
                            <field name="loai_van_ban"/>
                            <field name="nam"/>
                            <field name="van_ban_den_id"/>
                            <field name="van_ban_di_id"/>
                        </group> 
                        
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Tree View -->
        <record id="view_loai_van_ban_tree" model="ir.ui.view">
            <field name="name">loai_van_ban.tree</field>
            <field name="model">loai_van_ban</field>
            <field name="arch" type="xml">
                <tree>
                     <field name="loai_van_ban"/>
                     <field name="nam"/>
                     <field name="van_ban_den_id"/>
                     <field name="van_ban_di_id"/>
                </tree>
            </field>
        </record>

        <!-- Search View -->
        <record id="loai_van_ban_search" model="ir.ui.view">
            <field name="name">loai_van_ban.search</field>
            <field name="model">loai_van_ban</field>
            <field name="arch" type="xml">
                <search>
                     <field name="loai_van_ban"/>
                     <field name="nam"/>
                     <field name="van_ban_den_id"/>
                     <field name="van_ban_di_id"/>
                </search>
            </field>
        </record>

        <!-- Action -->
        <record id="action_loai_van_ban" model="ir.actions.act_window">
            <field name="name">Quản lý loại văn bản</field>
            <field name="res_model">loai_van_ban</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="loai_van_ban_search"/>
        </record>
    </data>
</odoo>