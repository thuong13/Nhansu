<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_phieu_luong_form" model="ir.ui.view">
            <field name="name">phieu_luong.form</field>
            <field name="model">phieu_luong</field>
            <field name="arch" type="xml">
                <form string="Phiếu Lương">
                    <sheet>
                        <notebook>
                            <page string="Thông tin chung">
                                <group>
                                    <field name="nhan_vien_id"/>
                                    <field name="ngay_bat_dau"/>
                                    <field name="ngay_ket_thuc"/>
                                    <field name="nam"/>
                                    <field name="thang"/>
                                    <field name="trang_thai"/>
                                </group>
                            </page>
                            <page string="Công việc">
                                <group>
                                    <field name="ngay_cong_thuc_te"/>
                                    <field name="gio_lam_them"/>
                                    <field name="ngay_nghi"/>
                                    <field name="luong_lam_them"/>
                                </group>
                            </page>
                            <page string="Thu nhập và Khấu trừ">
                                <group col="4" string="Thu nhập">
                                    <field name="luong_co_ban" widget="monetary"/>
                                    <field name="thuong" widget="monetary"/>
                                    <field name="phu_cap_xang_xe"/>
                                    <field name="phu_cap_an_trua"/>
                                    <field name="phu_cap_dien_thoai"/>
                                </group>
                                <group col="4" string="Khấu trừ">
                                    <field name="phat"/>
                                    <field name="bhxh"/>
                                    <field name="bhyt"/>
                                    <field name="bhtn"/>
                                    <field name="thue_tncn"/>
                                    <field name="khau_tru_khac"/>
                                    <field name="tong_luong"/>
                                </group>
                            </page>
                        </notebook>
                        <footer>
                            <button name="action_xac_nhan" 
                                    type="object" 
                                    string="Xác nhận" 
                                    class="btn-primary" 
                                    attrs="{'invisible': [('trang_thai', '!=', 'cho_duyet')]}"/>
                        </footer>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- View Tree -->
        <record id="view_phieu_luong_tree" model="ir.ui.view">
            <field name="name">phieu_luong</field>
            <field name="model">phieu_luong</field>
            <field name="arch" type="xml">
                <tree string="Danh sách phiếu lương">
                    <field name="nhan_vien_id"/>
                    <field name="nam"/>
                    <field name="thang"/>
                    <field name="ngay_bat_dau"/>
                    <field name="ngay_ket_thuc"/>
                    <field name="luong_co_ban"/>
                    <!-- <field name="thuong"/>  -->
                    <!-- <field name="phu_cap_xang_xe"/> -->
                    <!-- <field name="phu_cap_an_trua"/> -->
                    <!-- <field name="phu_cap_dien_thoai"/> -->
                    <!-- <field name="phat"/> -->
                    <field name="ngay_cong_thuc_te"/>
                    <field name="gio_lam_them"/>
                    <field name="ngay_nghi"/>
                    <field name="luong_lam_them"/>
                    <!-- <field name="bhxh"/>  -->
                    <!-- <field name="bhyt"/>  -->
                    <!-- <field name="bhtn"/> -->
                    <!-- <field name="thue_tncn"/>  -->
                    <field name="tong_luong"/>
                    <field name="trang_thai" widget="statusbar"/>
                </tree>
            </field>
        </record>

        <!-- Search View -->
        <record model="ir.ui.view" id="phieu_luong_search">
            <field name="model">phieu_luong</field>
            <field name="arch" type="xml">
                <search>
                    <searchpanel>
                        <field name="trang_thai" select="multi"/>
                    </searchpanel>
                    <field name="nhan_vien_id"/>
                    <field name="nam"/>
                    <field name="thang"/>
                    <field name="ngay_bat_dau"/>
                    <field name="ngay_ket_thuc"/>
                    <filter name="cho_duyet" string="Chờ duyệt" domain="[('trang_thai', '=', 'cho_duyet')]"/>
                    <filter name="da_duyet" string="Đã duyệt" domain="[('trang_thai', '=', 'da_duyet')]"/>
                </search>
            </field>
        </record>
        
        <!-- Action -->
        <record id="action_phieu_luong" model="ir.actions.act_window">
            <field name="name">Lương</field>
            <field name="res_model">phieu_luong</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="phieu_luong_search"/>
        </record>
    </data>
</odoo>
